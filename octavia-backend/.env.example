# ====== Database Configuration ======
DATABASE_URL=sqlite:///./dev.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/octavia_db

# ====== JWT & Security ======
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ====== API Configuration ======
API_TITLE=Octavia API
API_VERSION=1.0.0
API_DESCRIPTION=AI-Powered Video Translation Platform

# ====== CORS Configuration ======
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====== OpenAI Configuration (for Whisper) ======
OPENAI_API_KEY=sk-your-openai-api-key-here
WHISPER_MODEL=base

# ====== Celery Configuration ======
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=cache+memory://

# ====== File Upload Configuration ======
MAX_UPLOAD_SIZE_MB=2000
UPLOAD_DIR=uploads
TEMP_DIR=temp

# ====== Polar.sh Payment Integration ======
POLAR_API_KEY=your-polar-api-key
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret
POLAR_API_URL=https://api.polar.sh

# ====== Email Configuration (Optional) ======
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ====== Logging Configuration ======
LOG_LEVEL=INFO

# ====== Development ======
DEBUG=False

# ====== Media Processing ======
FFMPEG_PATH=ffmpeg

# ====== Feature Flags ======
ENABLE_VOICE_CLONING=true
ENABLE_SUBTITLE_EDITOR=true
ENABLE_BATCH_PROCESSING=true

# ====== Rate Limiting ======
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ====== Timeouts ======
UPLOAD_TIMEOUT_SECONDS=3600
PROCESSING_TIMEOUT_SECONDS=7200
DOWNLOAD_TIMEOUT_SECONDS=1800

# ====== Redis (Optional, for caching) ======
REDIS_URL=redis://localhost:6379/0
